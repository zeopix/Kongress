{% extends 'IgaKongressBundle:Layouts:welcome.html.twig' %}
{% block content %}
<div class="container">

    <div class="content">
        <div style="float:left;">
        <h1>Kongress.in</h1>
        <h4>Conéctate a través de Google o Facebook.</h4>
</div>
        <div style="float:right;" class="buttons">

  <a class="btn large" href="https://kongress.in/login/google">
            <img height="32px" src="{{ asset('bundles/igakongress/images/google.png') }}">
            <h2>Google</h2>
        </a>
<br>
        <a class="btn large" href="https://kongress.in/login/facebook">
            <img height="32px" src="{{ asset('bundles/igakongress/images/facebook.png') }}">
